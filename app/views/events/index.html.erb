<!-- Page Header -->
<div class="bg-red-900 text-white" style="background-color: #ec5415;">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl">Upcoming Events</h1>
    <p class="mt-6 text-xl max-w-3xl">Join us for these special gatherings and community events.</p>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="mb-8 flex justify-end">
    <%= link_to 'Add New Event', new_event_path, class: 'bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 px-4 rounded shadow' %>
  </div>

  <% if @events.any? %>
    <% @events.each do |event| %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
        <div class="md:flex">
          <div class="md:flex-shrink-0">
            <img class="h-48 w-full object-cover md:w-48" src="https://placehold.co/400x300?text=Event+Image" alt="Event Image">
          </div>
          <div class="p-8">
            <div class="uppercase tracking-wide text-sm font-semibold" style="color: #ec5415;"><%= event.group %></div>
            <h3 class="mt-2 text-xl font-semibold text-gray-900"><%= event.name %></h3>
            <p class="mt-3 text-gray-600"><%= event.description %></p>
            <div class="mt-4">
              <span class="text-gray-600">Date: <%= event.date %></span>
              <span class="mx-2 text-gray-400">|</span>
              <span class="text-gray-600">Time: <%= event.time %></span>
            </div>
            <div class="mt-4">
              <%= button_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-600 hover:bg-red-700 text-white font-medium px-6 py-2 rounded-md' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center text-gray-500 text-xl py-16">No upcoming events yet.</div>
  <% end %>
</div> 