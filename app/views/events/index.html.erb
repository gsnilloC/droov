<!-- Page Header -->
<div class="text-white relative overflow-visible bg-gradient-to-l from-orange-600 to-orange-400" style="height: 500px;">
  <div class="flex flex-row items-center max-w-7xl mx-auto h-full px-4 sm:px-6 lg:px-8">
    <div class="w-full lg:w-1/2 flex justify-center relative" style="z-index:2;">
      <img src="<%= asset_path('events.jpg') %>" alt="Boy" class="h-auto shadow-lg object-contain" style="max-width: 750px; position: absolute; top: -50px; left: 40%; transform: translateX(-50%);" />
    </div>
    <div class="mt-48 w-full lg:w-1/2 flex flex-col justify-center items-start z-1 ml-24">
      <h1 class="font-bold tracking-tight text-lg">UPCOMING EVENTS</h1>
      <p class="mt-2 text-3xl max-w-3xl font-semibold">Join us for these special gatherings and community events.</p>
    </div>
  </div>
</div>

<div class="mt-16 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="mb-8 flex justify-end">
    <%= link_to 'Add New Event', new_event_path, class: 'bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 px-4 rounded shadow' %>
  </div>

  <% if @events.any? %>
    <% @events.each do |event| %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
        <div class="md:flex">
          <div class="md:flex-shrink-0">
            <img class="h-48 w-full object-cover md:w-48" src="https://placehold.co/400x300?text=Event+Image" alt="Event Image">
          </div>
          <div class="p-8">
            <div class="uppercase tracking-wide text-sm font-semibold" style="color: #ec5415;"><%= event.group %></div>
            <h3 class="mt-2 text-xl font-semibold text-gray-900"><%= event.name %></h3>
            <p class="mt-3 text-gray-600"><%= event.description %></p>
            <div class="mt-4">
              <span class="text-gray-600">Date: <%= event.date %></span>
              <span class="mx-2 text-gray-400">|</span>
              <span class="text-gray-600">Time: <%= event.time %></span>
            </div>
            <div class="mt-4">
              <%= button_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-600 hover:bg-red-700 text-white font-medium px-6 py-2 rounded-md' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center text-gray-500 text-xl py-16">No upcoming events yet.</div>
  <% end %>
</div> 