<div class="max-w-2xl mx-auto py-8 px-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Add New Event</h1>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: @event, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :group, class: 'block text-gray-700 font-semibold mb-2' %>
        <%= form.select :group, ['Community', 'Children', 'Young Adults'], prompt: 'Select Group', class: 'w-full border border-gray-300 rounded px-3 py-2' %>
      </div>
      <div class="mb-4">
        <%= form.label :name, class: 'block text-gray-700 font-semibold mb-2' %>
        <%= form.text_field :name, class: 'w-full border border-gray-300 rounded px-3 py-2' %>
      </div>
      <div class="mb-4">
        <%= form.label :description, class: 'block text-gray-700 font-semibold mb-2' %>
        <%= form.text_area :description, class: 'w-full border border-gray-300 rounded px-3 py-2' %>
      </div>
      <div class="mb-4">
        <%= form.label :date, class: 'block text-gray-700 font-semibold mb-2' %>
        <%= form.date_field :date, class: 'w-full border border-gray-300 rounded px-3 py-2' %>
      </div>
      <div class="mb-6">
        <%= form.label :time, class: 'block text-gray-700 font-semibold mb-2' %>
        <%= form.text_field :time, class: 'w-full border border-gray-300 rounded px-3 py-2' %>
      </div>
      <div class="flex items-center justify-between">
        <%= form.submit 'Create Event', class: 'bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 px-4 rounded shadow' %>
        <%= link_to 'Back to Events', events_path, class: 'ml-4 text-gray-600 hover:text-gray-900' %>
      </div>
    <% end %>
  </div>
</div> 