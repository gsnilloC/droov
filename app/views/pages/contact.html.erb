<!-- Page Header -->
<div class="text-white relative overflow-visible bg-gradient-to-l from-[#ec6b3c] to-[#ef542e]" style="height: 500px;">
  <div class="flex flex-row items-center max-w-7xl mx-auto h-full px-4 sm:px-6 lg:px-8">
    <div class="w-full lg:w-1/2 flex justify-center relative" style="z-index:2;">
      <img src="<%= asset_path('sermon.jpg') %>" alt="Boy" class="h-auto shadow-lg object-contain" style="max-width: 620px; position: absolute; top: -50px; left: 40%; transform: translateX(-50%);" />
    </div>
    <div class="mt-48 w-full lg:w-1/2 flex flex-col justify-center items-start z-10">
      <h1 class="font-bold tracking-tight text-lg">REACH OUT TO US</h1>
      <p class="mt-2 text-3xl max-w-3xl font-semibold">We'd love to hear from you. Get in touch with us using the form below.</p>
      <div class="mt-8 flex justify-center space-x-4">
    </div>
    </div>
  </div>
</div>

<!-- Contact Section -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 mt-24">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Contact Form -->
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
      <div id="contact-loading" class="hidden flex items-center justify-center mb-4">
        <svg class="animate-spin h-6 w-6 text-orange-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"></path>
        </svg>
        <span class="ml-2 text-orange-500">Sending...</span>
      </div>
      <%= form_with url: contact_submit_path, method: :post, local: false, id: 'contact-form' do |f| %>
        <div class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <%= f.text_field :name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <%= f.email_field :email, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
            <%= f.text_area :message, rows: 8, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
          <div>
             <button type="submit" class="w-full bg-red-500 text-white px-6 py-3 rounded-md font-medium hover:bg-orange-700">
              Send Messages
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Contact Information -->
    <div class="space-y-8">
      <!-- Map -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <iframe
  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.515556707153!2d-121.3115411!3d37.8173424!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8090173b6b5f4b69%3A0x3d994f6f09e80f8a!2s17902%20Murphy%20Pkwy%2C%20Lathrop%2C%20CA%2095330!5e0!3m2!1sen!2sus!4v1714599250000!5m2!1sen!2sus"
  width="100%"
  height="300"
  style="border:0;"
  allowfullscreen=""
  loading="lazy"
  referrerpolicy="no-referrer-when-downgrade">
</iframe>

      </div>

      <!-- Contact Details -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div class="ml-3 text-gray-600">
              <p class="mt-2 text-gray-600">
  <%= link_to "17902 Murphy Pkwy, Lathrop, CA 95330", 
    "https://maps.google.com/?q=17902+Murphy+Pkwy+Lathrop+CA+95330", 
    target: "_blank", 
    class: "hover:text-blue-200" %>
</p>

            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div class="ml-3 text-gray-600">
              <p>(209)-922-4919</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
