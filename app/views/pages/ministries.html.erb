<!-- Page Header -->
<div class="bg-blue-900 text-white">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl">Our Ministries</h1>
    <p class="mt-6 text-xl max-w-3xl">Discover the various ways you can get involved and serve in our church community.</p>
  </div>
</div>

<!-- Ministries Grid -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    <!-- Youth Ministry -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <img class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1511632765486-a01980e01a18?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Youth Ministry">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-900">Youth Ministry</h3>
        <p class="mt-2 text-gray-600">Engaging and empowering young people through fellowship, worship, and service.</p>
        <div class="mt-4">
          <p class="text-sm text-gray-500">Meets: Wednesdays at 7:00 PM</p>
          <p class="text-sm text-gray-500">Contact: youth@church.com</p>
        </div>
        <%= link_to "Learn More", "#", class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <!-- Worship Ministry -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <img class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1508700115892-45ecd05ae2ad?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Worship Ministry">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-900">Worship Ministry</h3>
        <p class="mt-2 text-gray-600">Leading the congregation in meaningful worship through music and prayer.</p>
        <div class="mt-4">
          <p class="text-sm text-gray-500">Meets: Sundays at 8:00 AM</p>
          <p class="text-sm text-gray-500">Contact: worship@church.com</p>
        </div>
        <%= link_to "Learn More", "#", class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <!-- Outreach Ministry -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <img class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1593113598332-cd288d649433?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Outreach Ministry">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-900">Outreach Ministry</h3>
        <p class="mt-2 text-gray-600">Serving our community through various programs and initiatives.</p>
        <div class="mt-4">
          <p class="text-sm text-gray-500">Meets: Saturdays at 9:00 AM</p>
          <p class="text-sm text-gray-500">Contact: outreach@church.com</p>
        </div>
        <%= link_to "Learn More", "#", class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <!-- Children's Ministry -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <img class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1503676260728-1c00da094a0b?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Children's Ministry">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-900">Children's Ministry</h3>
        <p class="mt-2 text-gray-600">Nurturing young hearts and minds in the love of Christ.</p>
        <div class="mt-4">
          <p class="text-sm text-gray-500">Meets: Sundays at 9:00 AM</p>
          <p class="text-sm text-gray-500">Contact: children@church.com</p>
        </div>
        <%= link_to "Learn More", "#", class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <!-- Small Groups -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <img class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1529156069898-49953e39b3ac?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Small Groups">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-900">Small Groups</h3>
        <p class="mt-2 text-gray-600">Building deeper relationships through fellowship and Bible study.</p>
        <div class="mt-4">
          <p class="text-sm text-gray-500">Various times and locations</p>
          <p class="text-sm text-gray-500">Contact: groups@church.com</p>
        </div>
        <%= link_to "Learn More", "#", class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <!-- Prayer Ministry -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <img class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1506126613408-eca07ce68773?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Prayer Ministry">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-900">Prayer Ministry</h3>
        <p class="mt-2 text-gray-600">Supporting our church family through prayer and intercession.</p>
        <div class="mt-4">
          <p class="text-sm text-gray-500">Meets: Daily at 6:00 AM</p>
          <p class="text-sm text-gray-500">Contact: prayer@church.com</p>
        </div>
        <%= link_to "Learn More", "#", class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
  </div>
</div>

<!-- Get Involved CTA -->
<section class="bg-blue-50 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Get Involved</h2>
    <p class="mt-4 text-xl text-gray-600">
      Interested in joining one of our ministries? We'd love to have you!
    </p>
    <%= link_to "Contact Us", contact_path, class: "mt-8 inline-block bg-blue-600 text-white px-8 py-3 rounded-md font-medium hover:bg-blue-700" %>
  </div>
</section> 